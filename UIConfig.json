{
  "page": {
    "label": "Quadify Hardware Configuration"
  },
  "sections": [
    {
      "id": "core_services",
      "element": "section",
      "label": "Service Controls",
      "icon": "fa-plug",
      "onSave": {
        "type": "controller",
        "endpoint": "music_service/quadify",
        "method": "setUIConfig"
      },
      "saveButton": {
        "label": "Apply",
        "data": [
          "enableIR",
          "enableCava",
          "display_mode",
          "clock_font_key",
          "show_seconds",
          "show_date",
          "screensaver_enabled",
          "screensaver_type",
          "screensaver_timeout",
          "oled_brightness"
        ]
      },
      "content": [
        {
          "id": "enableIR",
          "element": "switch",
          "label": "Enable IR Remote",
          "value": false
        },
        {
          "id": "enableCava",
          "element": "switch",
          "label": "Enable CAVA Visualizer",
          "value": false
        },
        {
          "id": "display_mode",
          "element": "select",
          "label": "Display Mode",
          "options": [
            { "label": "Modern", "value": "modern" },
            { "label": "Original", "value": "original" },
            { "label": "Minimal", "value": "minimal" }
          ],
          "value": "modern"
        },
        {
          "id": "clock_font_key",
          "element": "select",
          "label": "Clock Font",
          "options": [
            { "label": "Sans", "value": "clock_sans" },
            { "label": "Dots", "value": "clock_dots" },
            { "label": "Digital", "value": "clock_digital" },
            { "label": "Bold", "value": "clock_bold" }
          ],
          "value": "clock_sans"
        },
        {
          "id": "show_seconds",
          "element": "switch",
          "label": "Show Seconds on Clock",
          "value": false
        },
        {
          "id": "show_date",
          "element": "switch",
          "label": "Show Date on Clock",
          "value": false
        },
        {
          "id": "screensaver_enabled",
          "element": "switch",
          "label": "Enable Screensaver",
          "value": true
        },
        {
          "id": "screensaver_type",
          "element": "select",
          "label": "Screensaver Type",
          "options": [
            { "label": "Geo", "value": "geo" },
            { "label": "Snake", "value": "snake" },
            { "label": "Bouncing Text", "value": "bouncing_text" }
          ],
          "value": "geo"
        },
        {
          "id": "screensaver_timeout",
          "element": "input",
          "type": "number",
          "label": "Screensaver Timeout (seconds)",
          "value": 3600
        },
        {
          "id": "oled_brightness",
          "element": "input",
          "type": "number",
          "label": "OLED Brightness",
          "min": 0,
          "max": 255,
          "step": 1,
          "value": 255
        }
      ]
    },
    {
      "id": "mcp23017_config",
      "element": "section",
      "label": "MCP23017 I2C Address & Buttons/LEDs",
      "icon": "fa-microchip",
      "onSave": {
        "type": "controller",
        "endpoint": "music_service/quadify",
        "method": "updateMcpConfig"
      },
      "saveButton": {
        "label": "Save Address",
        "data": ["enableButtonsLED", "mcp23017_address"]
      },
      "content": [
        {
          "id": "enableButtonsLED",
          "element": "switch",
          "label": "Enable Buttons & LEDs",
          "value": false
        },
        {
          "id": "mcp23017_address",
          "element": "input",
          "type": "text",
          "label": "I2C Address (e.g. 0x20)",
          "value": ""
        },
        {
          "id": "detect_mcp23017",
          "element": "button",
          "label": "Auto-detect MCP23017",
          "doc": "Runs i2cdetect to find MCP23017 and updates config.yaml.",
          "onClick": {
            "type": "plugin",
            "endpoint": "music_service/quadify",
            "method": "autoDetectMCP"
          }
        }
      ]
    },
    {
      "id": "restart_section",
      "element": "section",
      "label": "Restart Service",
      "icon": "fa-redo",
      "content": [
        {
          "id": "restart_quadify",
          "element": "button",
          "label": "Restart Quadify",
          "doc": "Restarts the Quadify service/plugin.",
          "onClick": {
            "type": "controller",
            "endpoint": "music_service/quadify",
            "method": "restartQuadify"
          }
        }
      ]
    }
  ]
}
