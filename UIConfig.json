{
  "page": {
    "label": "Quadify Hardware Configuration"
  },
  "sections": [
    {
      "id": "core_services",
      "element": "section",
      "label": "Service Controls",
      "icon": "fa-plug",
      "onSave": {
        "type": "controller",
        "endpoint": "music_service/quadify",
        "method": "setUIConfig"
      },
      "saveButton": {
        "label": "Apply",
        "data": ["enableQuadify", "enableButtonsLED", "enableIR", "enableCava"]
      },
      "content": [
        {
          "id": "enableQuadify",
          "element": "switch",
          "label": "Enable Quadify Service",
          "value": true
        },
        {
          "id": "enableButtonsLED",
          "element": "switch",
          "label": "Enable Buttons & LEDs",
          "value": false
        },
        {
          "id": "enableIR",
          "element": "switch",
          "label": "Enable IR Remote",
          "value": false
        },
        {
          "id": "enableCava",
          "element": "switch",
          "label": "Enable CAVA Visualizer",
          "value": false
        }
      ]
    },
    {
      "id": "mcp23017_config",
      "element": "section",
      "label": "MCP23017 I2C Address",
      "icon": "fa-microchip",
      "onSave": {
        "type": "controller",
        "endpoint": "music_service/quadify",
        "method": "updateMcpConfig"
      },
      "saveButton": {
        "label": "Save Address",
        "data": ["mcp23017_address"]
      },
      "content": [
        {
          "id": "mcp23017_address",
          "element": "input",
          "type": "text",
          "label": "I2C Address (e.g. 0x20)",
          "value": ""
        },
        {
          "id": "detect_mcp23017",
          "element": "button",
          "label": "Auto-detect MCP23017",
          "doc": "Runs i2cdetect to find MCP23017 and updates config.yaml.",
          "onClick": {
            "type": "plugin",
            "endpoint": "music_service/quadify",
            "method": "autoDetectMCP"
          }
        }
      ]
    }
  ]
}
