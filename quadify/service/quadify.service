[Unit]
Description=Main Quadify Service
After=network.target

[Service]
Type=simple
User=volumio
WorkingDirectory=/data/plugins/system_controller/quadify/quadify
ExecStart=/usr/bin/python3 /data/plugins/system_controller/quadify/quadify/src/main.py
ExecStop=/usr/bin/python3 /data/plugins/system_controller/quadify/quadify/service/reset_oled_gpio.py
Restart=on-failure
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target

